{
    "name": "Live Translation Extension",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Live Streaming Translation",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_icon": "icon16.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "tabCapture"
    ]
  }
  